{% extends 'base.html.twig' %}

{% block title %}Hello TournamentController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }

        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }

    </style>

    <div class="example-wrapper">
        <h1>Hello {{ controller_name }}! âœ…</h1>

        <article>
            <form action={{ path('roundRobin') }}>
                <button>Round Robin</button>
            </form>
            <table>
                {% for Match in allRounds %}
                    <tr>
                        <td>
                            {{ Match.AwayTeam.TeamName }}
                            <br>
                            <a href="{{ path('winner', {team:Match.AwayTeam.id}) }}"><button>pick for win</button></a>
                        </td>
                        <td> vs</td>
                        <td> {{ Match.HomeTeam.TeamName }}
                            <br>
                            <a href="{{ path('winner', {team:Match.HomeTeam.id}) }}"><button>pick for win</button></a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </article>

    </div>
{% endblock %}
